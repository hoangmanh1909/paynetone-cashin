<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:textViewStyle">@style/fontHelveticaNeue</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/push_top_down</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_up</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorOnPrimary">@color/white</item>-->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Start Up Screen -->
    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/bg_splashscreen</item>
    </style>

    <style name="SplashscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splashscreen</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="TextViewTitleHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textHeader</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="TextPayment">
        <item name="android:textColor">@color/colorBlack3</item>
    </style>

    <style name="RelativeLayoutPersonal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_7sdp</item>
    </style>

    <style name="ImageViewPersonal">
        <item name="android:layout_width">@dimen/imgPersonal</item>
        <item name="android:layout_height">@dimen/imgPersonal</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:background">@drawable/bg_color_personal</item>
    </style>

    <style name="ImageViewBalance">
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:background">@drawable/bg_color_balance</item>
    </style>

    <style name="ImageViewArrowRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_baseline_keyboard_arrow_right_24</item>
    </style>

    <style name="TranslucentBackground">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="TextTitleRegister">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Custom_Bootom_Sheet
    <style name="CustomBottomSheetDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="fontFamily">@font/semi_bold</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="CustomBottomSheetStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/to_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_bottom</item>
        <!--        <item name="android:background">@drawable/custom_bottomsheet</item>-->
    </style>

    <style name="TextLabel" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColorHint">#03A9F4</item>

    </style>

    <style name="fontSemiBold">
        <item name="fontFamily">@font/gilroy_semibold</item>
    </style>
    <style name="fontHelveticaNeueBold">
        <item name="fontFamily">@font/helvetica_neue_bold</item>
    </style>
    <style name="fontHelveticaNeue">
        <item name="fontFamily">@font/helvetica_neue</item>
    </style>

    <!-- Alert Dialog -->
    <style name="MyThemeOverlay.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogText</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorBlack2</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorBlack2</item>
    </style>
    <style name="MaterialAlertDialogText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack2</item>
        <item name="android:singleLine">false</item>
        <item name="android:lines">2</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>
        <item name="android:background">@drawable/bg_success_payment_dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Base.Theme.AppCompat.Dialog">
<!--        <item name="android:windowIsFloating">false</item>-->
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:background">@drawable/bg_success_payment_dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogStyleVietQr" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:background">@drawable/bg_success_payment_dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogStyleConfirmPassword" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:background">@drawable/bg_success_payment_dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="UsernameFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="startIconDrawable">@drawable/ic_user</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/hint_username</item>
        <item name="fontFamily">gilroy_regular</item>
    </style>

    <style name="UsernameEditTextStyle">
        <item name="android:singleLine">true</item>
    </style>

    <style name="PasswordFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="startIconDrawable">@drawable/ic_lock</item>
        <item name="endIconMode">password_toggle</item>
        <item name="android:hint">@string/hint_password</item>
        <item name="fontFamily">gilroy_regular</item>
    </style>

    <style name="FullScreenDialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
<!--        <item name="android:background">@android:color/white</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="FullScreenDialogListBankQR" parent="FullScreenDialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="DialogFragment" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="dialogWithoutBox">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@drawable/bg_success_payment_dialog</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <!--        <item name="tabIndicatorColor">@color/colorWhite</item>-->
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/TabLayoutText</item>
    </style>

    <style name="TabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>